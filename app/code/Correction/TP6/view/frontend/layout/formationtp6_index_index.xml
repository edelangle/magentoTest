<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="sidebar.main">
            <block class="Correction\TP6\Block\Customer\Addresses" name="tp6.addresses" template="Correction_TP6::addresses.phtml" />
        </referenceContainer>


        <referenceContainer name="main">
            <block class="Correction\TP6\Block\Customer\Coordinates" name="tp6.coordinates" template="Correction_TP6::coordinates.phtml" />
        </referenceContainer>


        <referenceContainer name="sidebar.additional">
            <block class="Correction\TP6\Block\Customer\Message" name="tp6.message" template="Correction_TP6::message.phtml" />
            <block class="Correction\TP6\Block\Customer\DateTime" name="tp6.dateTime" template="Correction_TP6::dateTime.phtml" cacheable="false" />
        </referenceContainer>

    </body>
</page>
